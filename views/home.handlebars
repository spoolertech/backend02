<h2>Lista de Turnos</h2>

<ul id="turnList">
    {{#each turnos}}
    <li id="turn-{{id}}">
        {{nombre}} - {{fecha}} a las {{hora}}
        <form action="/delete-turn" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="{{id}}">
            <button type="submit">Eliminar</button>
        </form>
    </li>
    {{/each}}
</ul>

<form action="/add-turn" method="POST">
    <input type="text" name="nombre" placeholder="Nombre del paciente" required>
    <input type="date" name="fecha" required>
    <input type="time" name="hora" required>
    <button type="submit">Agendar Turno</button>
</form>